pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
    }
    stages { 
        stage('build') {
            steps {
                echo "Building node application"
            }
        }
        stage('deploy-dev') {
            steps {
                echo "Deplaying to DEV"
            }
        }
        stage('test-dev') {
            steps {
                echo "Testing DEV"
            }
        }
        stage('deploy-int') {
            steps {
                echo "Deplying INT"
            }
        }
        stage('test-int') {
            steps {
                echo "Testing INT"
            }
        }
        stage('deploy-prd') {
            steps {
                echo "Deploying PRD"
            }
        }
        stage('test-prd') {
            steps {
                echo "Testing on PRD"
            }
        }
    }
}